{
  "name": "@ilona/database",
  "version": "0.1.0",
  "private": true,
  "description": "Prisma database client for Ilona English Center",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:apply-obligations": "node scripts/apply-migration.js",
    "db:add-lesson-rate": "dotenv -e ../../.env.local -- tsx scripts/add-lesson-rate-column.ts",
    "db:add-color-hex": "tsx scripts/apply-color-hex-migration.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "prisma": "^5.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4"
  }
}

